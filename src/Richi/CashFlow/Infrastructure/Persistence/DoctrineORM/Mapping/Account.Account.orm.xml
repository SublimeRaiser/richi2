<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Richi\CashFlow\Domain\Account\Account" table="account">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="tablename_seq" allocation-size="100" initial-value="1" />
        </id>

<!--        <field name="id" column="id" type="string" length="16" />-->
        <field name="name" column="name" type="string" length="64" />
        <field name="description" column="description" type="string" length="255" nullable="true" />
        <field name="icon" column="icon" type="string" length="255" nullable="true" />
        <field name="initialBalance" column="initial_balance" type="integer" />
        <field name="archived" column="archived" type="boolean" />

    </entity>

</doctrine-mapping>
